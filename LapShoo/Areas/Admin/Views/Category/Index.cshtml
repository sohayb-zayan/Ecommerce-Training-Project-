@{
    Layout = "_MyLayOut";
}

<link href="//cdn.datatables.net/2.3.3/css/dataTables.dataTables.min.css" rel="stylesheet" />

<div>
    <a asp-area="Admin" asp-controller="Category" asp-action="Creat" class="btn btn-primary" >Creat</a>
</div>

<br />

<table class="table table-hover" id="mytable" width="100%">
    <thead class="text-bold">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date Created</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>

@await Html.PartialAsync("_tostar");


<!-- Edit Modal -->

<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="CategoryId" name="Id" />

                    <div class="mb-3">
                        <label>Name</label>
                        <input type="text" id="Name" class="form-control" name="Name" />
                    </div>

                    <div class="mb-3">
                        <label>Description</label>
                        <textarea id="Description" class="form-control" name="Description"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="SaveEdit()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/2.3.3/js/dataTables.min.js"></script>
    <script src="~/js/Category.js"></script>
}