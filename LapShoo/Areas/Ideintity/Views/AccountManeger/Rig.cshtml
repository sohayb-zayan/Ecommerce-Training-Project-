@model RigVM
@{
    Layout = "_account";
}

<div class="container-scroller" style="height:100%;">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
            <div class="row flex-grow">
                <div class="col-lg-6 d-flex align-items-center justify-content-center">
                    <div class="auth-form-transparent text-left p-3">
                        <div class="brand-logo">
                            <img src="~/MyLayOut/assets/images/logo.svg" alt="logo">
                        </div>
                        <h4>New here?</h4>
                        <h6 class="font-weight-light">Join us today! It takes only few steps</h6>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form class="pt-3" asp-action="Rig">
                            @*user name*@
                            <div class="form-group">
                                
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-account-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="UserName" type="text" class="form-control form-control-lg border-left-0" placeholder="Username">
                                </div>
                                <span asp-validation-for="UserName" class=" btn-danger"></span>
                            </div>
                            @*Email*@
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-email-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Email" type="email" class="form-control form-control-lg border-left-0" placeholder="Email">
                                </div>
                                <span asp-validation-for="Email" class=" btn-danger"></span>
                            </div>
                            @*First Name*@
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-email-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="FirstName" type="text" class="form-control form-control-lg border-left-0" placeholder="FistName">
                                </div>
                                <span asp-validation-for="FirstName" class=" btn-danger"></span>
                            </div>
                            @*Last name*@
                            <div class="form-group">
                                <label asp-for="LasttName"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-email-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="LasttName" type="text" class="form-control form-control-lg border-left-0" placeholder="Last Name">
                                </div>
                                <span asp-validation-for="LasttName" class=" btn-danger"></span>
                            </div>
                            @*Country*@
                            <div class="form-group">

                                <select asp-for="Country" class="form-control form-control-lg" id="exampleFormControlSelect2">
                                    <option value="" selected disabled hidden>-- chose country --</option>
                                    <option value="Egypt">Egypt</option>
                                    <option value="United States of America">United States of America</option>
                                    <option value="United Kingdom">United Kingdom</option>
                                    <option value="India">India</option>
                                    <option value="Germany">Germany</option>
                                    <option value="Argentina">Argentina</option>
                                </select>
                                <span asp-validation-for="Country" class=" btn-danger"></span>
                            </div>
                            @*Password*@
                            <div class="form-group">

                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-lock-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Password" type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="Password">
                                </div>
                                <span asp-validation-for="Password" class=" btn-danger"></span>
                            </div>
                            @*confirm Pass word*@
                            <div class="form-group">
                                
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-lock-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="Confirm Password">
                                </div>
                                <span asp-validation-for="ConfirmPassword" class=" btn-danger"></span>
                            </div>
                            @*Phon Number*@
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-phone-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="PhoneNumber" type="number" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="Phone number">
                                </div>
                                <span asp-validation-for="PhoneNumber" class=" btn-danger"></span>
                            </div>

                            <div class="mb-4">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input"> I agree to all Terms & Conditions
                                    </label>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN UP</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a asp-action="LogIn" class="text-primary">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 register-half-bg d-flex flex-row">
                    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2021 All rights reserved.</p>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
